{
  "name": "@funkp/core",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.mjs",
  "types": "./dist/main.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/main.ts",
      "types": "./dist/main.d.ts",
      "import": "./dist/main.mjs",
      "default": "./dist/main.cjs"
    },
    "./functions": {
      "development": "./src/functions/index.ts",
      "types": "./dist/functions/index.d.ts",
      "import": "./dist/functions.mjs",
      "default": "./dist/functions.cjs"
    },
    "./Either": {
      "development": "./src/Either/index.ts",
      "types": "./dist/Either/index.d.ts",
      "import": "./dist/Either.mjs",
      "default": "./dist/Either.cjs"
    },
    "./Option": {
      "development": "./src/Option/index.ts",
      "types": "./dist/Option/index.d.ts",
      "import": "./dist/Option.mjs",
      "default": "./dist/Option.cjs"
    },
    "./Effect": {
      "development": "./src/Effect/index.ts",
      "types": "./dist/Effect/index.d.ts",
      "import": "./dist/Effect.mjs",
      "default": "./dist/Effect.cjs"
    },
    "./Brand": {
      "development": "./src/Brand/index.ts",
      "types": "./dist/Brand/index.d.ts",
      "import": "./dist/Brand.mjs",
      "default": "./dist/Brand.cjs"
    },
    "./Fiber": {
      "development": "./src/Fiber/index.ts",
      "types": "./dist/Fiber/index.d.ts",
      "import": "./dist/Fiber.mjs",
      "default": "./dist/Fiber.cjs"
    }
  },
  "files": [
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "devDependencies": {
    "vitest": "^3",
    "@funkp/vitest": "0.0.1"
  },
  "nx": {
    "implicitDependencies": [
      "!@funkp/vitest"
    ],
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "platform": "node",
          "outputPath": "libs/core/dist",
          "main": "libs/core/src/main.ts",
          "tsConfig": "libs/core/tsconfig.build.json",
          "format": [
            "esm",
            "cjs"
          ],
          "additionalEntryPoints": [
            "./libs/core/src/functions",
            "./libs/core/src/Either",
            "./libs/core/src/Option",
            "./libs/core/src/Effect",
            "./libs/core/src/Brand",
            "./libs/core/src/Fiber"
          ],
          "sourcemap": true,
          "declarationRootDir": "libs/core/src",
          "skipTypeCheck": true,
          "declaration": false,
          "esbuildOptions": {
            "treeShaking": true,
            "minifySyntax": true,
            "outExtension": {
              ".js": ".mjs",
              ".cjs": ".cjs"
            },
            "define": {
              "import.meta.vitest": "undefined"
            }
          }
        }
      },
      "test": {
        "executor": "@nx/vitest:test",
        "outputs": [
          "{workspaceRoot}/coverage/libs/core"
        ],
        "options": {
          "config": "libs/core/vite.config.ts"
        }
      }
    }
  },
  "dependencies": {
    "@funkp/vitest": "0.0.1"
  }
}
